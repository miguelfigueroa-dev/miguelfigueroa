---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description: string[];
  details: string[];
  myRole: string[];
  technologies: string[];
  image: ImageMetadata;
}

const { title, description, details, myRole, technologies, image } =
  Astro.props as Props;
---

<div
  class="group bg-neutral-900/40 border border-white/10 rounded-[2.5rem] overflow-hidden hover:border-white/30 transition-colors shadow-2xl w-full"
>
  <div
    class="p-8 md:p-10 flex flex-col md:flex-row gap-10 items-center md:items-start"
  >
    <div
      class="w-48 h-48 flex-shrink-0 rounded-3xl overflow-hidden border border-white/10"
    >
      <Image
        src={image}
        alt={title}
        sizes="192px"
        class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity"
      />
    </div>

    <div class="flex-1 space-y-4 text-center md:text-left">
      <h3 class="text-4xl font-bold text-white tracking-tight">{title}</h3>

      <div
        class="flex flex-wrap justify-center md:justify-start gap-2 uppercase"
      >
        {
          technologies.map((tech) => (
            <span class="text-[10px] px-3 py-1 bg-white/5 border border-white/10 rounded-lg tracking-widest">
              {tech}
            </span>
          ))
        }
      </div>

      <p class="text-gray-400 text-lg leading-relaxed max-w-2xl">
        {description.join(" ")}
      </p>
    </div>
  </div>

  <details class="group/details">
    <summary
      class="list-none cursor-pointer border-t border-white/5 p-5 hover:bg-white/5 transition-colors"
    >
      <div
        class="flex items-center justify-center gap-3 text-white/60 font-bold text-xs uppercase tracking-[0.3em] group-hover/details:text-white/80"
      >
        <span>Detalles del proyecto y mi rol</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 transition-transform group-open/details:rotate-180"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 9l-7 7-7-7"></path>
        </svg>
      </div>
    </summary>

    <div
      class="p-8 md:p-12 grid grid-cols-1 lg:grid-cols-2 gap-12 bg-black/20 border-t border-white/5"
    >
      <div class="space-y-6">
        <h4 class="text-white font-bold text-2xl flex items-center gap-3">
          <div class="w-1.5 h-7 bg-white rounded-full"></div>
          El Proyecto
        </h4>
        <ul class="space-y-4">
          {
            details.map((item) => (
              <li class="flex gap-3 text-gray-400">
                <span class="text-white/30">•</span> {item}
              </li>
            ))
          }
        </ul>
      </div>

      <div class="space-y-6">
        <h4 class="text-white font-bold text-2xl flex items-center gap-3">
          <div class="w-1.5 h-7 bg-white rounded-full"></div>
          Mi Contribución Técnica
        </h4>
        <ul class="space-y-4">
          {
            myRole.map((item) => (
              <li class="flex gap-3 text-gray-400">
                <span class="text-white/30">•</span> {item}
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </details>
</div>
