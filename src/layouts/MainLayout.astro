---
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/webp" href="/Favicon-M.webp" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body class="bg-[#050505] text-slate-200 font-sans selection:bg-white/10">
		<div
			class="fixed inset-0 -z-10 h-full w-full bg-[linear-gradient(to_right,#ffffff10_1px,transparent_1px),linear-gradient(to_bottom,#ffffff10_1px,transparent_1px)] bg-[size:14px_24px]"
		>
		</div>

		<slot />
	</body>
</html>
